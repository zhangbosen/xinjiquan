.zbs-main {
  background: #fff;
}
.zbs-top {
  display: flex;
  flex-direction: row;
  position: fixed;
  width: 100%;
  z-index: 10;
}
.zbs-top .tags-con {
  flex: 1;
  overflow: hidden;
}
.zbs-top .btns-con {
  width: 100rpx;
  position: relative;
}
.zbs-top .btns-con .self-btn {
  padding: 0;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  font-size: 48rpx;
  position: absolute;
  left: 10rpx;
  top: 40rpx;
  z-index: 1;
}
.zbs-top .btns-con::after {
  content: "";
	position: absolute;
	width: 100rpx;
	height: 100rpx;
	top: 30rpx;
	left: 0;
	right: 0;
	margin: auto;
	/* box-shadow: 0 -3rpx 8rpx rgba(0, 0, 0, 0.08); */
	border-radius: 50rpx;
	background-color: inherit;
	z-index: 0;
}

.zbs-con {
  padding-top: 100rpx;
}
.zbs-con .self-item {
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  flex-direction: row;
  padding-bottom: 0;
}
.zbs-con .self-item .item-avatar {
  width: 80rpx; 
  height: 80rpx; 
  border-radius: 10rpx;
}
.zbs-con .self-item .item-right {
  padding-left: 20rpx;
  color: #131313;
  flex: 1;
  overflow: hidden;
  position: relative;
  margin-top: -40rpx;
}
.zbs-con .self-item .item-right .item-title {
  color: #475782;
  font-size: 28rpx;
}
.zbs-con .self-item .item-right .item-pic {
  overflow: hidden;
}
/* onlyFour 是 只有4张照片时的父容器类名。 给它限制宽度，就可以做到每行显示两张照片 */
.zbs-con .self-item .item-right .item-pic.onlyFour {
  width: 90%; 
}



/* 2、3、5、6、7、8、9张照片的样式 */
.item-pic .pic-item {
  box-sizing: border-box;
  width: 200rpx;
  height: 200rpx;
  padding-right: 10rpx;
  padding-bottom: 10rpx;
  float: left;
}
.item-pic .pic-item image {
  width: 100%;
  height: 100%;
}

/* 1张照片的样式 */
.item-pic-only .pic-item {
  overflow: hidden;
  box-sizing: border-box;
  max-width: 400rpx;
  max-height: 400rpx;
}



.zbs-con .self-item .item-right .item-pub {
  color: #6c6c6c;
  font-size: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  height: 70rpx;
  box-sizing: content-box;
}
.item-pub .cu-btn.callBtn {
  height: 36rpx;
  width: 60rpx;
  padding: 0;
}
.item-pub .cu-btn.callBtn view {
  width: 6rpx; 
  height: 6rpx;
  border-radius: 50%; 
  background: white; 
  margin: 0 4rpx;
}

.item-pub .pub-btns {
  background: #3b3b3b;
  border-radius: 10rpx;
  position: absolute; 
  bottom: 0; 
  right: 66rpx;
  display: none;
}
.item-pub .pub-btns .cu-btn {
  width: 160rpx;
  background: #3b3b3b;
  border-radius: 10rpx;
  height: 70rpx;
}
.item-pub .pub-btns .cu-btn .selfIcon {
  padding-right: 10rpx;
}


.comment-box {
  background: #f5f5f5;
  width: 100%;
  height: 100rpx;
  padding: 20rpx;
  position: fixed; 
  bottom: 0;
  z-index: 1;
  display: flex;
  align-items: center;

}
.comment-box .com-input {
  flex: 1;
  background: #fff;
  margin-right: 20rpx;
  height: 100%;
  border-radius: 10rpx;
  padding: 0 20rpx;
  caret-color: #39b54a;
}
.comment-box .com-btn-dis {
  background: #f5f5f5;
  border: 1px solid #bbb;
  color: #bbb;
}




